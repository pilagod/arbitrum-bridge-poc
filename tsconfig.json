{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@abi/*": ["abi/*"],
      "@contract": ["contract"],
      "@deployments/*": ["deployments/*"],
      "@network": ["network"],
      "@typechain": ["typechain"]
    }
  },
  "include": ["*.ts", "artifacts", "deploy", "scripts", "worker"],
  "exclude": ["node_modules"]
}
